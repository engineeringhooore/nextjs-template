{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.14.8",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "node --env-file=./.env .next/standalone/server.js",
    "lint": "next lint",
    "ts:check": "tsc",
    "format": "prettier . --write --ignore-unknown",
    "prepare": "husky",
    "test": "TZ=UTC vitest run -c ./vitest.config.ts",
    "test:coverage": "TZ=UTC vitest run -c ./vitest.config.ts --coverage",
    "test:e2e": "playwright test",
    "test:related": "TZ=UTC vitest related -c ./vitest.config.ts --run",
    "test:related:coverage": "TZ=UTC vitest related -c ./vitest.config.ts --run --coverage",
    "test:watch": "TZ=UTC vitest -c ./vitest.config.ts"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "14.2.7",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^15.7.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "msw": "^2.4.1",
    "postcss": "^8.4.42",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  }
}
